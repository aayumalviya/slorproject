<center>
	<br>
<%= form_tag posts_path , :method => :get do %>
<div>
	<%#= form_field_tag :search, params[:search] %>
	<input type="search" name="search" placeholder="Search..."data-behavior="autocomplete" >
	<%= submit_tag "Search", :title => nil %>

</div>
<% end %>
<br>
<% @posts.each do |post| %>
	<%= post.title %>
	<br>
	
	<%= post.body %>
	<br>
	<%= link_to "ShowPost" , post_path(post), class:"btn btn-warning btn-sm" %>
	<hr>
<% end %> 	

	<br>
<%= link_to "newPost", new_post_path, class:"btn btn-info" %>
</center>